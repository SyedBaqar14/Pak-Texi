<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/back_drawable" />

        <fidarides.eusopht.app.Utils.MyTextView
            android:id="@+id/txtTitle_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@string/selected_payment_mode"
            android:textColor="@color/black_text_color"
            android:textSize="16sp"
            android:onClick="onClick"
            android:clickable="true"
            />



    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/back_drawable" />

    <fidarides.eusopht.app.Utils.MyTextView
        android:id="@+id/txtTitle_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="@string/selected_payment_mode"
        android:textColor="@color/black_text_color"
        android:textSize="16sp"
        android:onClick="onClick02"
        android:clickable="true"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/back_drawable" />

    <fidarides.eusopht.app.Utils.MyTextView
        android:id="@+id/imageTitle_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="@string/selected_payment_mode"
        android:textColor="@color/black_text_color"
        android:textSize="16sp"
        android:onClick="onClick03"
        android:clickable="true"
        />

</LinearLayout>